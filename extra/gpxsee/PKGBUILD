pkgname=gpxsee
_pkgname=GPXSee
pkgver=13.12
pkgrel=1
pkgdesc='GPS log file viewer and analyzer'
arch=(loong64 x86_64)
url='https://www.gpxsee.org/'
license=(GPL3)
depends=('qt6-imageformats' 'qt6-5compat' 'qt6-positioning' 'qt6-svg'
         'qt6-serialport' 'hicolor-icon-theme')
makedepends=('qt6-tools')
source=(https://downloads.sourceforge.net/$pkgname/$_pkgname-$pkgver.tar.gz)
sha256sums=('947d725d0d30fa827c2971174ab2244b4eaf0c491aed1bb9f0dd71de06237218')

build() {
  cd $_pkgname-$pkgver
  /usr/lib/qt6/bin/lrelease gpxsee.pro
  qmake6 gpxsee.pro PREFIX=/usr
  make
}

package() {
  cd $_pkgname-$pkgver
  make INSTALL_ROOT="$pkgdir" install
}
