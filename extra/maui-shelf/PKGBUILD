# Maintainer: Antonio Rojas <arojas@archlinux.org>

pkgname=maui-shelf
_pkgname=shelf
pkgver=3.0.2
pkgrel=1
pkgdesc='Document and EBook collection manager'
url='https://mauikit.org/'
arch=(loong64 x86_64)
license=(GPL3)
depends=(mauikit-documents mauikit-filebrowsing mauikit-texteditor poppler-qt5 hicolor-icon-theme)
makedepends=(extra-cmake-modules)
groups=(maui)
source=(https://download.kde.org/stable/maui/$_pkgname/$pkgver/$_pkgname-$pkgver.tar.xz)
sha256sums=('b8244ece74831d052c34edee34e8ba9999330a2c633902bbf647e1645b7e47f4')

build() {
  cmake -B build -S $_pkgname-$pkgver
  cmake --build build
}

package() {
  DESTDIR="$pkgdir" cmake --install build
}
