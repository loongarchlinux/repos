options=(!strip) # Nothing to strip, save packaging time

prepare() {
# Customize configuration
  patch -d texmf-dist/web2c -p0 < texmf.cnf.patch
  patch -d texmf-dist/web2c -p0 < texmfcnf.lua.patch

# Split files per package
  . subpackages
  for _pkg in bibtexextra core fontsextra formatsextra games humanities langchinese langcyrillic langextra langgreek \
              langjapanese langkorean latexextra music pictures pstricks publishers science; do
    mkdir -p texlive-$_pkg/texmf-dist
    declare -n _pkgref="$_pkg"
    for _dir in ${_pkgref[@]}; do
      mkdir -p texlive-$_pkg/texmf-dist/$(dirname $_dir)
      mv texmf-dist/$_dir texlive-$_pkg/texmf-dist/$(dirname $_dir)
    done
  done
  mv texmf-dist/doc texlive-doc

# Remove files not meant to be installed
  rm -fr texmf-dist/{.makepkg,.svn,source,scripts,README,ls-R}

# Make sure the are no unpackaged files left
  if [ $(find texmf-dist -type f | wc -l) != 0 ]; then
    echo "Unpackaged leftover files:"
    find texmf-dist -type f
    echo "Move them to one of the subpackages or delete them"
    exit 1
  fi
}

package_texlive-bibtexextra() {
  pkgdesc+='additional BibTeX styles and bibliography databases'
  groups=(texlive)
  depends=(texlive-core)

  mkdir -p "$pkgdir"/usr/share/
  mv $pkgname/texmf-dist "$pkgdir"/usr/share/
}

package_texlive-core() {
  pkgdesc+='core distribution'
  groups=(texlive)
  depends=(texlive-bin dvisvgm)
  optdepends=('texlive-langchinese: for the xeCJK style')
  backup=(etc/texmf/web2c/texmf.cnf
          etc/texmf/chktex/chktexrc
          etc/texmf/dvipdfmx/dvipdfmx.cfg
          etc/texmf/dvips/config/config.ps
          etc/texmf/tex/generic/config/language.dat
          etc/texmf/tex/generic/config/language.def
          etc/texmf/tex/generic/tex-ini-files/pdftexconfig.tex
          etc/texmf/ttf2pk/ttf2pk.cfg
          etc/texmf/web2c/fmtutil.cnf
          etc/texmf/web2c/mktex.cnf
          etc/texmf/xdvi/XDvi)

  mkdir -p "$pkgdir"/usr/share/
  mv $pkgname/texmf-dist "$pkgdir"/usr/share/
  
  install -Dm644 $pkgname.fmts -t "$pkgdir"/var/lib/texmf/arch/installedpkgs
  install -Dm644 $pkgname.maps -t "$pkgdir"/var/lib/texmf/arch/installedpkgs

  install -Dm644 09-texlive-fonts.conf -t "$pkgdir"/usr/share/fontconfig/conf.avail/

# install pacman hooks
  install -Dm644 *.hook -t "$pkgdir"/usr/share/libalpm/hooks/
  install -Dm755 mktexlsr.script "$pkgdir"/usr/share/libalpm/scripts/mktexlsr
  install -Dm755 texlive-updmap.script "$pkgdir"/usr/share/libalpm/scripts/texlive-updmap
  install -Dm755 texlive-fmtutil.script "$pkgdir"/usr/share/libalpm/scripts/texlive-fmtutil
# remove upstream updmap.cfg: it contains too many maps
   rm "${pkgdir}/usr/share/texmf-dist/web2c/updmap.cfg"
# remove upstream fmtutil.cnf: it will be autogenerated
   rm "${pkgdir}/usr/share/texmf-dist/web2c/fmtutil.cnf"
# copy config files to $TEXMFCONFIG tree
  install -Dm644 "$pkgdir"/usr/share/texmf-dist/chktex/chktexrc -t "$pkgdir"/etc/texmf/chktex/
  install -Dm644 "$pkgdir"/usr/share/texmf-dist/web2c/mktex.cnf -t "$pkgdir"/etc/texmf/web2c/
  install -Dm644 "$pkgdir"/usr/share/texmf-dist/web2c/texmf.cnf -t "$pkgdir"/etc/texmf/web2c/
  install -Dm644 "$pkgdir"/usr/share/texmf-dist/web2c/updmap-hdr.cfg -t "$pkgdir"/etc/texmf/web2c/
  install -Dm644 "$pkgdir"/usr/share/texmf-dist/web2c/fmtutil-hdr.cnf "$pkgdir"/etc/texmf/web2c/fmtutil.cnf
  install -Dm644 "$pkgdir"/usr/share/texmf-dist/dvips/config/config.ps -t "$pkgdir"/etc/texmf/dvips/config/
  install -Dm644 "$pkgdir"/usr/share/texmf-dist/dvipdfmx/dvipdfmx.cfg -t "$pkgdir"/etc/texmf/dvipdfmx/
  install -Dm644 "$pkgdir"/usr/share/texmf-dist/tex/generic/tex-ini-files/pdftexconfig.tex -t "$pkgdir"/etc/texmf/tex/generic/tex-ini-files/
  install -Dm644 "$pkgdir"/usr/share/texmf-dist/tex/generic/config/language.dat -t "$pkgdir"/etc/texmf/tex/generic/config/
  install -Dm644 "$pkgdir"/usr/share/texmf-dist/tex/generic/config/language.def -t "$pkgdir"/etc/texmf/tex/generic/config/
  install -Dm644 "$pkgdir"/usr/share/texmf-dist/ttf2pk/ttf2pk.cfg -t "$pkgdir"/etc/texmf/ttf2pk/
  install -Dm644 "$pkgdir"/usr/share/texmf-dist/xdvi/XDvi -t "$pkgdir"/etc/texmf/xdvi/
}

package_texlive-fontsextra() {
  pkgdesc+='all sorts of extra fonts'
  groups=(texlive)
  depends=(texlive-core)

  mkdir -p "$pkgdir"/usr/share/
  mv $pkgname/texmf-dist "$pkgdir"/usr/share/
  
  install -Dm644 $pkgname.maps -t "$pkgdir"/var/lib/texmf/arch/installedpkgs
}

