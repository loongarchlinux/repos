package_texlive-science() {
  pkgdesc+='typesetting for mathematics, natural and computer sciences'
  groups=(texlive)
  depends=(texlive-core)
  optdepends=('texlive-latexextra: for the algorithm2e package'
              'texlive-langgreek: for the textgreek style')

  mkdir -p "$pkgdir"/usr/share/
  mv $pkgname/texmf-dist "$pkgdir"/usr/share/
  
  install -Dm644 $pkgname.fmts -t "$pkgdir"/var/lib/texmf/arch/installedpkgs
  install -Dm644 $pkgname.maps -t "$pkgdir"/var/lib/texmf/arch/installedpkgs
}

package_texlive-doc() {
  pkgdesc+='documentation'

  mkdir -p "$pkgdir"/usr/share/doc
  mv texlive-doc "$pkgdir"/usr/share/doc/texlive
# Symlink so texdoc can find it
  mkdir -p "$pkgdir"/usr/share/texmf-dist
  ln -s /usr/share/doc/texlive "$pkgdir"/usr/share/texmf-dist/doc
}

package_texlive-meta() {
  pkgdesc='Metapackage to install Tex Live'
  depends=(texlive-bibtexextra
