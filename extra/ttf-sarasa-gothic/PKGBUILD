pkgname=ttf-sarasa-gothic
pkgver=1.0.1
pkgrel=1
pkgdesc="A CJK programming font based on Iosevka and Source Han Sans. (SuperTTC)"
arch=('any')
url="https://github.com/be5invis/Sarasa-Gothic"
license=('OFL')
provides=('ttf-sarasa-slab')
source=("https://github.com/be5invis/Sarasa-Gothic/releases/download/v$pkgver/Sarasa-SuperTTC-$pkgver.7z"
        "LICENSE-$pkgver::https://raw.githubusercontent.com/be5invis/Sarasa-Gothic/v${pkgver}/LICENSE")
sha512sums=('a6f4be327ded2802579f25d00037c6b251a02359a336cbe3e1f9f1c845e683a27f3a1ff925f8060b8e1ceb6349a708e1bbdfa8fed54b75a770c44a2294c256bd'
            '1ebc3e4579ec655fcd5e53fa36f492860b9278cbeae1eb56f0f2ad5b905e930a91ef4f10fad1f4c5694dff482a7a3c07e041903a534045b533ffef63db58f25b')

package() {
    install -d "$pkgdir/usr/share/fonts/${pkgname:4}"
    install -m644 *.ttc "$pkgdir/usr/share/fonts/${pkgname:4}"
    install -Dm644 "LICENSE-$pkgver" "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
