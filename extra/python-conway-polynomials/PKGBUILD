# Maintainer: Antonio Rojas <arojas@archlinux.org>

_pyname=conway-polynomials
pkgname=python-$_pyname
pkgver=0.9
pkgrel=1
pkgdesc="Python interface to Frank LÃ¼beck's Conway polynomial database"
arch=(any)
url='https://github.com/pikepdf/pikepdf'
license=(GPL3)
depends=(python)
makedepends=(python-build
             python-installer
             python-setuptools
             python-wheel)
source=(https://github.com/sagemath/$_pyname/archive/$pkgver/$pkgname-$pkgver.tar.gz)
sha256sums=('dd1dff678707d44cdc30f812d5cbe3551a56ec9ec1983f7651e75dcf8bfd2541')

build() {
  cd $_pyname-$pkgver
  python -m build --wheel --no-isolation
}

package() {
  cd $_pyname-$pkgver
  python -m installer --destdir="$pkgdir" dist/*.whl
  install -Dm644 LICENSE -t "$pkgdir"/usr/share/licenses/$pkgname
}
