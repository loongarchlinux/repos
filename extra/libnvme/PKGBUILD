# Maintainer: Morten Linderud <foxboron@archlinux.org>

pkgname=libnvme
pkgver=1.7.1
pkgrel=1
pkgdesc="C Library for NVM Express on Linux"
arch=('loong64' 'x86_64')
url="https://github.com/linux-nvme/libnvme"
license=('LGPL2.1')
makedepends=('systemd' 'meson' 'asciidoc' 'python' 'swig')
depends=('json-c' 'openssl' 'keyutils' 'dbus')
source=(
	"$pkgname-$pkgver.tar.gz::https://github.com/linux-nvme/${pkgname}/archive/v${pkgver}.tar.gz"
)
sha256sums=('e9c3ad59c068788faf0f0af4296f92f8ce410d12749f0f35a541d6a21e630393')

build() {
	cd "${pkgname}-${pkgver}"
    arch-meson \
	-Dlibdbus=auto \
	-Ddocs-build=true \
	.build
}

package() {
	cd "${pkgname}-${pkgver}"
	DESTDIR="$pkgdir" meson install -C .build
}
