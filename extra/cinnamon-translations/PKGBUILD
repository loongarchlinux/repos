pkgname=cinnamon-translations
pkgver=5.8.0
pkgrel=1
pkgdesc="Translations for Cinnamon and Nemo"
arch=(any)
url="https://github.com/linuxmint/${pkgname}"
license=(GPL2)
options=(!emptydirs)
source=(${url}/archive/${pkgver}/${pkgname}-${pkgver}.tar.gz)
sha512sums=('889a3d2ad54fc4fc5a9e9c4af3778fd9acbfe33d7a00f94d2371edead0a5f722ba162ee73c178349ffdbf76c2524b03f06c867053fa28da70bf6701fe6f5d843')
b2sums=('b4cc8fdc169040b112daf5b48bedc3612e85a910b7aebda0c771316be4eb2d068c6e2ee0248eaf0efa0a079716a068810e8ed153dcc6fcf18474c676c34e8d7d')

build() {
  cd ${pkgname}-${pkgver}
  make
}

package() {
  cd ${pkgname}-${pkgver}
  cp -r usr/ "${pkgdir}"
}
