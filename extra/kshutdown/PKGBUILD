pkgname=kshutdown
pkgver=5.2
pkgrel=2
pkgdesc='Shutdown Utility'
arch=(loong64 x86_64)
url='https://kshutdown.sourceforge.io/'
license=(GPL)
depends=(gcc-libs
         glibc
         kconfig5
         kconfigwidgets5
         kcoreaddons5
         kcrash5
         kdbusaddons5
         kglobalaccel5
         ki18n5
         kidletime5
         knotifications5
         knotifyconfig5
         kwidgetsaddons5
         kxmlgui5
         qt5-base)
makedepends=(extra-cmake-modules)
source=(https://downloads.sourceforge.net/$pkgname/KShutdown/$pkgver/$pkgname-source-$pkgver.zip)
sha256sums=('1ae0911b734a0d7eb12469ca95f066fb4d52c7880c2e9f1b692b236fd08337df')

build() {
  cmake -B build -S $pkgname-$pkgver
  cmake --build build
}

package() {
  DESTDIR="$pkgdir" cmake --install build
}
