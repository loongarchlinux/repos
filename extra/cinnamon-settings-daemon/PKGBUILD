pkgname=cinnamon-settings-daemon
pkgver=5.8.0
pkgrel=1
pkgdesc="The Cinnamon Settings daemon"
arch=(loong64 x86_64)
url="https://github.com/linuxmint/${pkgname}"
license=(GPL)
depends=(cinnamon-desktop colord dbus-glib libcanberra-pulse libcups
         libgnomekbd libgudev libnotify librsvg libwacom nss polkit
         pulseaudio-alsa upower)
optdepends=('cinnamon-translations: i18n')
makedepends=(meson samurai xf86-input-wacom)
options=(!emptydirs)
source=(${url}/archive/${pkgver}/${pkgname}-${pkgver}.tar.gz)
sha512sums=('908dbee666e3406369f75602546cd8c4efbe8854202ce044fe5b088c750615a7c9d21d5893e9fd4b34e7cc3cfcc51edbdb4783bada0ad88258247408bc510f61')
b2sums=('8b2eadb8522c011d758ebf42918cfff391ac5524fbcfb8c795623a2ad6004bf4287c226cd980e7116bd7189ffdde6a7b413617634597f90eb6c1801379f42255')

build() {
  arch-meson --libexecdir=lib/${pkgname} ${pkgname}-${pkgver} build
  samu -C build
}

package() {
  DESTDIR="${pkgdir}" samu -C build install
}
