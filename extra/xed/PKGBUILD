pkgname=xed
pkgver=3.4.0
pkgrel=1
pkgdesc="A small and lightweight text editor. X-Apps Project."
arch=(loong64 x86_64)
url="https://github.com/linuxmint/${pkgname}"
license=(GPL)
groups=(x-apps)
depends=(gspell gtksourceview4 libpeas xapp)
makedepends=(meson samurai gobject-introspection intltool itstool)
optdepends=('python: required for some plugins')
source=(${url}/archive/${pkgver}/${pkgname}-${pkgver}.tar.gz)
sha256sums=('09c38303ce1b80c139a623a0586fd6c18841fc678a1b0925362e6f978d9b0b61')
b2sums=('10f2b32e88f36e72d4060912e65cf987a0af9d4c1ee63c387b80c01a532515a312b132d4bef818750138d406bda3a18cda1ef540d7d2381309a24e152967c0bc')

build() {
  arch-meson ${pkgname}-${pkgver} build
  samu -C build
}

package(){
  DESTDIR="${pkgdir}" samu -C build install
}
