pkgname=wordpress
pkgver=6.3.1
pkgrel=1
pkgdesc='Blog tool and publishing platform'
arch=(any)
url='https://wordpress.org/'
license=(GPL)
depends=(php)
optdepends=('apache: Web server'
            'mariadb: Database server'
            'nginx: Web server')
options=(!debug emptydirs)
install=$pkgname.install
source=("https://wordpress.org/$pkgname-$pkgver.tar.gz")
sha256sums=('1d557ba4034c8a624de0fd4fb2e0322006457a3bd83101125e6569a3169cf17f')
b2sums=('081662cab27632410b69cfbae6dad8e14119125f0fcaecf7b48c3d53659996569fd742b181daf2ef8aabcd5a8fe1487aec5e6934c017aa2298db74e1df820d44')

package() {
  install -d "$pkgdir/usr/share/webapps"
  cp -r $pkgname "$pkgdir/usr/share/webapps"
}

