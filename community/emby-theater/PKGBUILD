pkgname=emby-theater
pkgver=3.0.15
_libmpv_ver=2022_01_12
pkgrel=5
pkgdesc='An Electron app for Emby'
arch=(loongarch64 x86_64)
url=https://emby.media
license=(GPL2)
depends=(
  at-spi2-atk
  at-spi2-core
  cairo
