pkgname=hyperscan
pkgver=5.3.0
pkgrel=1
pkgdesc='High-performance regular expression matching library'
arch=(loongarch64 x86_64)
url=https://www.hyperscan.io
license=(BSD)
makedepends=(
  boost
  cmake
  git
  python
  ragel
)
source=(git+https://github.com/intel/hyperscan.git#tag=c00683d73916e39f01b0d418f686c8b5c379159c)
sha256sums=(SKIP)

pkgver() {
  cd hyperscan

  git describe --tags | sed 's/^v//'
}

prepare() {
  if [[ -d build ]]; then
    rm -rf build
  fi
  mkdir build
}

build() {
  cd build

  cmake ../hyperscan \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DBUILD_SHARED_LIBS=ON
  make
}

package() {
  make DESTDIR="$pkgdir" -C build install
  install -Dm 644 hyperscan/COPYING -t "${pkgdir}"/usr/share/licenses/hyperscan/
}

# vim: ts=2 sw=2 et:
