pkgname=fcitx5-anthy
pkgver=5.0.5
pkgrel=1
pkgdesc="Anthy Wrapper for Fcitx5"
arch=('loongarch64' 'x86_64')
url="https://github.com/fcitx/fcitx5-anthy"
license=('GPL')
depends=('fcitx5' 'anthy')
makedepends=('extra-cmake-modules' 'ninja')
source=("https://download.fcitx-im.org/fcitx5/fcitx5-anthy/fcitx5-anthy-$pkgver.tar.xz"{,.sig})
sha512sums=('a9fb764e0efee742f9313434e63b0dc397e1dd072b1b845e6b1a5b7f94b7f57f5654773e8f83d93985d4451d5043eacd522e078065cedfa06504c9063f0c979a'
            'SKIP')
validpgpkeys=('2CC8A0609AD2A479C65B6D5C8E8B898CBF2412F9') # Weng Xuetian <wengxt@gmail.com>

build(){
  cd $pkgname-$pkgver

  cmake -GNinja -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_INSTALL_LIBDIR=/usr/lib .
  ninja
}

package() {
  cd $pkgname-$pkgver
  DESTDIR="$pkgdir" ninja install
}
