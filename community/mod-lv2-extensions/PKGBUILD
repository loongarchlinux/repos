# Maintainer: David Runge <dvzrv@archlinux.org>

pkgname=mod-lv2-extensions
pkgver=2022.09.25
pkgrel=1
pkgdesc="Custom LV2 Extensions used by MOD Devices"
arch=(any)
url="https://github.com/moddevices/mod-lv2-extensions"
license=(custom:ISC)
source=($pkgname-$pkgver.tar.gz::https://github.com/moddevices/$pkgname/archive/refs/tags/${pkgver//./-}.tar.gz)
sha512sums=('3ee00219c5b1eb45d6b5a3a71ea0b6bbe842f01b4d85bf6d10209ad1a865bdf28a2333bffcda47693d19d77bb716be99f821a838997c536a8f926aa216113a39')
b2sums=('29e25ff19433310224a29367b3a451d7afdeb4cac9b0b2ebc01a57ee5daa0631bc53bb3f04fe658ecf853cf7dabb29c82294ea6658dfadd07e341a80efeeb932')

package() {
  make DESTDIR="$pkgdir/" PREFIX=/usr install -C $pkgname-${pkgver//./-}
  install -vDm 644 $pkgname-${pkgver//./-}/LICENSE -t "$pkgdir/usr/share/licenses/$pkgname/"
}
