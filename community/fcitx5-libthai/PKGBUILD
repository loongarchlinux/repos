pkgname=fcitx5-libthai
pkgver=5.0.6
pkgrel=1
pkgdesc="Libthai Wrapper for Fcitx5"
arch=('loongarch64' 'x86_64')
url="https://github.com/fcitx/fcitx5-libthai"
license=('GPL')
depends=('fcitx5' 'libthai')
makedepends=('extra-cmake-modules' 'ninja')
source=("https://download.fcitx-im.org/fcitx5/$pkgname/$pkgname-$pkgver.tar.xz"{,.sig})
sha512sums=('5c2de15ff1fa2fd3bb403c8f3c3f50def89ecb0b6cc55b9c90dcabf3d128cbbe3c161ecef84da7c56b36265ffaf2464bc8e5c60d20ab402321779fd779fc8d43'
            'SKIP')
validpgpkeys=('2CC8A0609AD2A479C65B6D5C8E8B898CBF2412F9') # Weng Xuetian <wengxt@gmail.com>

build(){
  cd $pkgname-$pkgver

  cmake -GNinja -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_INSTALL_LIBDIR=/usr/lib .
  ninja
}

package() {
  cd $pkgname-$pkgver
  DESTDIR="$pkgdir" ninja install
}
