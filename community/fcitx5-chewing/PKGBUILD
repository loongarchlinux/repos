pkgname=fcitx5-chewing
pkgver=5.0.8
pkgrel=1
pkgdesc="Chewing Wrapper for Fcitx5"
arch=('loongarch64' 'x86_64')
url="https://github.com/fcitx/fcitx5-chewing"
license=('GPL')
depends=('fcitx5' 'libchewing')
makedepends=('extra-cmake-modules' 'ninja')
source=("https://download.fcitx-im.org/fcitx5/fcitx5-chewing/fcitx5-chewing-$pkgver.tar.xz"{,.sig})
sha512sums=('284c89f5f7a721355b7e4f476d8494b2c6de2a6af693b0622865307a2a10c6f3b5f04658324d7391a9416a177b3cf212283ea709c9a20dc048450d2d24811895'
            'SKIP')
validpgpkeys=('2CC8A0609AD2A479C65B6D5C8E8B898CBF2412F9') # Weng Xuetian <wengxt@gmail.com>

build(){
  cd $pkgname-$pkgver

  cmake -GNinja -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_INSTALL_LIBDIR=/usr/lib .
  ninja
}

package() {
  cd $pkgname-$pkgver
  DESTDIR="$pkgdir" ninja install
}
