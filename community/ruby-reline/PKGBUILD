# Maintainer: Anatol Pomozov

_gemname=reline
pkgname=ruby-$_gemname
pkgver=0.3.1
pkgrel=1
pkgdesc="Alternative GNU Readline or Editline implementation by pure Ruby."
arch=('any')
url='https://github.com/ruby/reline'
license=('BSD-2')
depends=('ruby')
options=('!emptydirs')
source=("https://rubygems.org/downloads/$_gemname-$pkgver.gem")
noextract=("$_gemname-$pkgver.gem")
sha512sums=('1b48dac38997d36830b8a5c2beb118ff053da7b3d4d81d5d2153b2273b15cded2f548ab097c343872e9b6a73883e13d843cfb8ff44cbbf7b7a28c9094408b4b6')

package() {
  cd "$srcdir"

  local _gemdir="$(ruby -e'puts Gem.default_dir')"
  HOME="/tmp" GEM_HOME="$_gemdir" GEM_PATH="$_gemdir" gem install -N --no-user-install --ignore-dependencies \
     -i "$pkgdir/$_gemdir" -n "$pkgdir/usr/bin" "$_gemname-$pkgver.gem"
  rm "$pkgdir/$_gemdir/cache/$_gemname-$pkgver.gem"
  install -D -m644 "$pkgdir/$_gemdir/gems/$_gemname-$pkgver/COPYING" "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}
