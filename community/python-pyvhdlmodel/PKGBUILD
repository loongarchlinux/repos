_pkgname=pyVHDLModel
pkgname=python-pyvhdlmodel
pkgver=0.10.2
pkgrel=1
pkgdesc='An abstract language model of VHDL written in Python'
arch=('any')
url='https://github.com/VHDL/pyVHDLModel'
license=('Apache2')
depends=('python' 'python-pydecor')
makedepends=('python-setuptools')
checkdepends=('python-pytest')
source=("$pkgname-$pkgver.tar.gz::$url/archive/v$pkgver.tar.gz")
sha512sums=('cbefe26cd88e72cc92814d153e9e9f934de3029ff2e188f9b33914f371cc722a3f27acc88a1b9a68c2fb1ec05f3b0a360c2143802030417f1f8a5c8304e0dccb')

build() {
  cd $_pkgname-$pkgver

  python setup.py build
}

check() {
  cd $_pkgname-$pkgver

  python -m pytest tests
}

package() {
  cd $_pkgname-$pkgver

  python setup.py install --root="$pkgdir" --optimize=1 --skip-build

  install -Dm 644 LICENSE.md "$pkgdir"/usr/share/licenses/$pkgname/LICENSE
}

# vim:set ts=2 sw=2 et:
