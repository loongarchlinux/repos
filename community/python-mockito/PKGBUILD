pkgname=python-mockito
pkgver=1.3.5
pkgrel=1
pkgdesc='Spying framework'
arch=('any')
url='https://github.com/kaste/mockito-python'
license=('MIT')
depends=('python')
makedepends=('python-pytest' 'python-setuptools')
checkdepends=('python-numpy')
source=("$pkgname-$pkgver.tar.gz::https://github.com/kaste/mockito-python/archive/$pkgver.tar.gz")
sha512sums=('161f5bb8fa53eb477d042ccbbb408bcddf3ba1dd060bb95381595b3e468496be1ca28792e3a3e4d7e979bedd3f91fa5cf5f14e0ac43bdfeafe84d3a3cf53f501')

build() {
  cd mockito-python-$pkgver
  python setup.py build
}

check() {
  cd mockito-python-$pkgver
  pytest --ignore=build
}

package() {
  cd mockito-python-$pkgver
  python setup.py install --root="$pkgdir" -O1
}
