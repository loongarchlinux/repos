pkgname=terraform
pkgver=1.2.8
pkgrel=1
pkgdesc="HashiCorp tool for building and updating infrastructure as code idempotently"
url="https://github.com/hashicorp/terraform"
arch=("loong64" "x86_64")
license=("MPL")
makedepends=('go')
depends=('glibc')
optdepends=('diffutils: for running `terraform fmt -diff`')
options=('!lto')
source=("$pkgname-$pkgver.tar.gz::https://github.com/hashicorp/terraform/archive/v$pkgver.tar.gz"
        "terraform.bash"
        "terraform.fish"
        "terraform.zsh")
sha512sums=('7843fab03d85811bfbf73232ecc2a5cb479efd697eff3abf9be6640ad166f44a839ef32cda42bda095255a547bee633cb8638f1d4fd0d96c0dd773a894150279'
