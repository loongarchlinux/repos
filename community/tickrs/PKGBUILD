# Maintainer:  Orhun ParmaksÄ±z <orhun@archlinux.org>

pkgname=tickrs
epoch=2
pkgver=0.14.4
pkgrel=1
pkgdesc="Realtime ticker data in your terminal"
arch=('loongarch64' 'x86_64')
url="https://github.com/tarkah/tickrs"
license=('MIT')
depends=('gcc-libs' 'zlib')
makedepends=('rust')
source=("$pkgname-$pkgver.tar.gz::$url/archive/v$pkgver.tar.gz")
sha512sums=('efd0a918a51c5e868d2615f3126a90f91c1215f281d4d4872928e05fcc216c2b8b5b83a5f9704179cbe249c9452e08caa77c0c5447387843f4d410aaa52d4853')

prepare() {
  cd "$pkgname-$pkgver"
  cargo fetch --locked  
}

build() {
  cd "$pkgname-$pkgver"
  cargo build --release --frozen
}

check() {
  cd "$pkgname-$pkgver"
  cargo test --frozen
}

package() {
  cd "$pkgname-$pkgver"
  install -Dm 755 "target/release/$pkgname" -t "$pkgdir/usr/bin"
  install -Dm 644 README.md -t "$pkgdir/usr/share/doc/$pkgname"
  install -Dm 644 LICENSE -t "$pkgdir/usr/share/licenses/$pkgname"
}
